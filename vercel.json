{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",

  "redirects": [
    {
      "source": "/",
      "destination": "/client",
      "permanent": true
    }
  ],

  "rewrites": [
    {
      "source": "/((?!api/.*|$).*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
